<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Lib.Finch.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lib_finch_color_primary</item>
        <item name="colorPrimaryDark">@color/lib_finch_color_primary_dark</item>
        <item name="colorAccent">@color/lib_finch_color_accent</item>

        <item name="android:textViewStyle">@style/Lib.Finch.TextView</item>
    </style>

    <style name="Lib.Finch.TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/console</item>
    </style>

    <style name="Lib.Finch.TextAppearance.ListItem" parent="android:TextAppearance">
        <item name="android:textColor">@color/lib_finch_text</item>
        <item name="android:fontFamily">@font/console</item>
    </style>

    <style name="Lib.Finch.TextAppearance.Label" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/lib_finch_text</item>
        <item name="android:fontFamily">@font/console</item>
    </style>

    <style name="Lib.Finch.TextAppearance.Value" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/lib_finch_text</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Lib.Finch.TextAppearance.TransactionTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">top</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">@font/console</item>
    </style>

</resources>